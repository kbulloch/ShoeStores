<html>
<head>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <title>Slippy Sam's Brands List</title>
</head>
<body>
    <nav class="navbar navbar-default navbar-top">
        <div class="container">
            <h4><a href="/">Home</a> |
                <a href="/all_stores">Stores</a> |
                <a href="/all_brands">Brands</a> </h4>
        </div>
    </nav>
    <div class="container">
        <h1>Slippy Sam's Shoe Brands</h1>

        <form action="/create_brand" method="post">
            <div class="form-group">
                <label for="brand">Create a new brand</label>
                <input type="text" name="brand" class="form-control">
            </div>
            <button type="submit" class="btn btn-success">Create</button>
        </form>

        {% if brands is not empty %}

            {% for brand in brands %}
                <ul>
                    <li><h4><a href="/brand/{{ brand.getId }}">{{ brand.getName }}</a></h4></li>
                </ul>
            {% endfor %}

            <form action="/confirm_delete_brands" method="get">
                <div class="form-group">
                    <button type="submit" class="btn btn-warning">Clear Brands List</button>
                </div>
            </form>

        {% else %}

            <h4>There are no brands listed yet</h4>

        {% endif %}
    </div>
</body>
</html>
